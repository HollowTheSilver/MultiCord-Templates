{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/HollowTheSilver/MultiCord-Templates/main/template.schema.json",
  "title": "MultiCord Template Schema",
  "description": "Validation schema for MultiCord Discord bot templates",
  "type": "object",
  "required": ["template", "bot", "files"],
  "properties": {
    "template": {
      "type": "object",
      "description": "Template metadata",
      "required": ["name", "version", "description", "author", "category"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Template identifier (lowercase, hyphens only)",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 3,
          "maxLength": 50
        },
        "version": {
          "type": "string",
          "description": "Semantic version (e.g., 1.0.0)",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string",
          "description": "Brief template description",
          "minLength": 10,
          "maxLength": 200
        },
        "author": {
          "type": "string",
          "description": "Template author name or team"
        },
        "discord_py_version": {
          "type": "string",
          "description": "Required Discord.py version (e.g., >=2.0.0)",
          "default": ">=2.0.0"
        },
        "python_version": {
          "type": "string",
          "description": "Required Python version (e.g., >=3.9)",
          "default": ">=3.9"
        },
        "category": {
          "type": "string",
          "description": "Template category",
          "enum": ["general", "moderation", "entertainment", "utility", "advanced"]
        },
        "tags": {
          "type": "array",
          "description": "Template tags for discovery",
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 20
          },
          "minItems": 1,
          "maxItems": 10,
          "uniqueItems": true
        },
        "homepage": {
          "type": "string",
          "description": "Template homepage or documentation URL",
          "format": "uri"
        },
        "repository": {
          "type": "string",
          "description": "Template source code repository URL",
          "format": "uri"
        }
      }
    },
    "bot": {
      "type": "object",
      "description": "Default bot configuration",
      "required": ["prefix", "description"],
      "properties": {
        "token": {
          "type": "string",
          "description": "Bot token placeholder (should be YOUR_BOT_TOKEN_HERE)",
          "pattern": "^YOUR_BOT_TOKEN_HERE$"
        },
        "prefix": {
          "type": "string",
          "description": "Default command prefix",
          "minLength": 1,
          "maxLength": 5
        },
        "description": {
          "type": "string",
          "description": "Bot description"
        },
        "activity_type": {
          "type": "string",
          "description": "Discord activity type",
          "enum": ["playing", "watching", "listening", "streaming", "competing"]
        },
        "activity_name": {
          "type": "string",
          "description": "Activity status text"
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Template features",
      "properties": {
        "slash_commands": {
          "type": "boolean",
          "description": "Supports slash commands",
          "default": false
        },
        "prefix_commands": {
          "type": "boolean",
          "description": "Supports prefix commands",
          "default": true
        },
        "database": {
          "type": "boolean",
          "description": "Uses a database",
          "default": false
        },
        "api_integration": {
          "type": "boolean",
          "description": "Integrates with external APIs",
          "default": false
        },
        "voice_support": {
          "type": "boolean",
          "description": "Supports voice channel operations",
          "default": false
        },
        "web_dashboard": {
          "type": "boolean",
          "description": "Includes a web dashboard",
          "default": false
        }
      }
    },
    "permissions": {
      "type": "object",
      "description": "Required Discord permissions",
      "properties": {
        "required": {
          "type": "array",
          "description": "Minimum required permissions",
          "items": {
            "type": "string"
          }
        },
        "optional": {
          "type": "array",
          "description": "Optional permissions for extended features",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "files": {
      "type": "object",
      "description": "Required template files",
      "required": ["bot", "config", "requirements", "readme"],
      "properties": {
        "bot": {
          "type": "string",
          "description": "Main bot file path",
          "pattern": "\\.py$",
          "default": "bot.py"
        },
        "config": {
          "type": "string",
          "description": "Configuration file path",
          "pattern": "\\.toml$",
          "default": "config.toml"
        },
        "requirements": {
          "type": "string",
          "description": "Requirements file path",
          "pattern": "^requirements.*\\.txt$",
          "default": "requirements.txt"
        },
        "readme": {
          "type": "string",
          "description": "README file path",
          "pattern": "^README\\.md$",
          "default": "README.md"
        },
        "additional": {
          "type": "array",
          "description": "Additional template files",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "configuration": {
      "type": "object",
      "description": "Configuration options",
      "properties": {
        "database_url": {
          "type": "string",
          "description": "Database connection URL (if applicable)"
        },
        "api_keys": {
          "type": "array",
          "description": "Required API keys",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "required": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "External dependencies",
      "properties": {
        "system": {
          "type": "array",
          "description": "System-level dependencies (e.g., ffmpeg)",
          "items": {
            "type": "string"
          }
        },
        "services": {
          "type": "array",
          "description": "External services required (e.g., PostgreSQL, Redis)",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "type": "object",
      "description": "Usage examples",
      "properties": {
        "commands": {
          "type": "array",
          "description": "Example bot commands",
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "usage": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "compatibility": {
      "type": "object",
      "description": "Compatibility information",
      "properties": {
        "multicord_version": {
          "type": "string",
          "description": "Compatible MultiCord CLI version",
          "default": ">=1.0.0"
        },
        "platforms": {
          "type": "array",
          "description": "Supported platforms",
          "items": {
            "type": "string",
            "enum": ["windows", "linux", "macos"]
          },
          "default": ["windows", "linux", "macos"]
        }
      }
    }
  }
}